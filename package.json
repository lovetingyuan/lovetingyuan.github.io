{
  "name": "tingyuan",
  "private": true,
  "description": "庭院的个人网站",
  "version": "0.0.0",
  "homepage": "https://lovetingyuan.github.io",
  "scripts": {
    "dev": "npx cross-env NODE_ENV=development vite",
    "type-check": "vue-tsc --noEmit && vue-tsc -p scripts --noEmit --composite false",
    "build": "npx cross-env NODE_ENV=production vite build",
    "serve": "vite preview",
    "deploy": "node ./scripts/deploy",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "github-markdown-css": "^5.1.0",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@actions/core": "^1.6.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@iconify-json/material-symbols": "^1.1.28",
    "@iconify-json/mdi": "^1.1.46",
    "@types/markdown-it": "^12.2.3",
    "@types/markdown-it-container": "^2.0.5",
    "@types/markdown-it-link-attributes": "^3.0.1",
    "@types/marked": "^4.0.3",
    "@types/node": "^16.11.10",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.1.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-vue": "^9.9.0",
    "markdown-it": "^13.0.1",
    "markdown-it-container": "^3.0.0",
    "markdown-it-link-attributes": "^4.0.1",
    "markdown-it-shiki": "^0.7.2",
    "prettier": "^2.6.2",
    "typescript": "^4.6.3",
    "unplugin-icons": "^0.15.2",
    "vite": "^4.1.1",
    "vite-plugin-vue-markdown": "^0.22.4",
    "vue-tsc": "^1.0.24"
  },
  "eslintConfig": {
    "root": true,
    "globals": {
      "ty": "readonly"
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/eslint-config-typescript/recommended",
      "@vue/eslint-config-prettier"
    ],
    "rules": {
      "semi": [
        2,
        "never"
      ]
    },
    "env": {
      "vue/setup-compiler-macros": true
    },
    "overrides": [
      {
        "files": [
          "scripts/**/*.js"
        ],
        "env": {
          "node": true,
          "commonjs": true
        }
      }
    ]
  }
}
