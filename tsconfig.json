{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "*.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmitOnError": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "unplugin-icons/types/vue",
    ]
  },
  "references": [
    {
      "path": "./scripts/tsconfig.json"
    }
  ]
}
