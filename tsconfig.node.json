{
  "extends": [
    "@tsconfig/node18/tsconfig.json"
  ],
  "include": [
    "scripts/*.ts",
    "*.d.ts",
    "vite.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "types": [
      "node"
    ]
  }
}
